
{
  "manifest_version": 2,
  "name": "Salesforce.com Id Clipper",
  "version": "3",
  "description": "Helps you get Salesforce.com Ids from records and links to your clipboard",
  "background": {
    "scripts": ["background.js"]
  },
  
  "page_action" :
  {
    "default_icon" : "clipper.png",
    "default_title" : "Clip this Id!"
  },
  "permissions" : [
    "tabs",
    "contextMenus",
    "clipboardWrite",
    "http://*/",
    "https://*/"
  ],
  "icons":
  {
  	"128": "clipper_128.png"
  }
}